@model PagingViewModel

<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!this.Model.HasPreviousPage) { <text>disabled</text> }">
            <a class="page-link" style="color:#ff5f13" asp-action="All" asp-route-id="@this.Model.PreviousPageNumber">Previous</a>
        </li>
        @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" style="color:#ff5f13" asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @this.Model.PageNumber
                <span class="sr-only">(current)</span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 3; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" style="color:#ff5f13" asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item @if (!this.Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" style="color:#ff5f13" asp-action="All" asp-route-id="@this.Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>
