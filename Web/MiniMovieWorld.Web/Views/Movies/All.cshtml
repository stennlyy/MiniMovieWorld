@model MiniMovieWorld.Web.ViewModels.Movies.AllMoviesViewModel
@{
    this.ViewData["Title"] = "All Movies";
}

<h1 style="font-size: 75px" class="col-md-6 offset-md-4">@this.ViewData["Title"]</h1>

<hr />
<div class="row">
    @foreach (var movie in this.Model.Movies)
    {
        <div class="col-auto">
            <div class="card" style="width: 12rem;">
                <img src="~/images/MovieImages/@movie.Image" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.Synopsis</p>
                    <a asp-controller="Movies" asp-action="GetMovieById" asp-route-id="@movie.Id" class="btn">Details</a>
                </div>
            </div>
        </div>
    }
</div>
<hr />